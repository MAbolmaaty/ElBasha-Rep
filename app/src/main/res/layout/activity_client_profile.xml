<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_30sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_splash" />


        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/textColorBlack" />


        <codeztalk.elbasha.delegate.views.CircleImageView
            android:id="@+id/imageUser"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:border_color="@color/colorPrimaryDark"
            app:border_width="@dimen/_2sdp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textEmployeeName"
            style="@style/textStyleRegular"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:text="@string/clientName2" />



        <include layout="@layout/layout_recycler" />


    </LinearLayout>

</LinearLayout>

