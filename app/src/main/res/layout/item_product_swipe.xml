<?xml version="1.0" encoding="utf-8"?>
<codeztalk.elbasha.delegate.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="left"
    app:mode="same_level">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:text="@string/action_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor">

        <codeztalk.elbasha.delegate.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorRipple"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                     android:orientation="horizontal">

                    <View style="@style/verticalView2" />

                    <TextView
                        android:id="@+id/textSerial"
                        style="@style/textStylePrint"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:text="@string/_99"
                        android:textSize="@dimen/_10sdp" />

                    <View style="@style/verticalView2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textProductName"
                            style="@style/textStylePrint"
                            android:text="@string/productName"
                              />

                        <TextView
                            android:id="@+id/textProductEN"
                            style="@style/textStylePrint"
                            android:text="@string/productName"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textProductType"
                            style="@style/textStylePrint"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/box2"
                            android:textColor="@color/color_mark"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />


                    </LinearLayout>


                    <View style="@style/verticalView2" />


                    <TextView
                        android:id="@+id/textAmount"
                        style="@style/textStylePrint"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="1000"
                        android:textSize="@dimen/_12sdp" />

                    <View style="@style/verticalView2" />

                    <TextView
                        android:id="@+id/textPrice"
                        style="@style/textStylePrint"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:gravity="center"
                        android:text="20"
                        android:textSize="@dimen/_12sdp" />

                    <View style="@style/verticalView2" />


                    <TextView
                        android:id="@+id/textTotal"
                        style="@style/textStylePrint"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:gravity="center"
                        android:text="200"
                        android:textSize="@dimen/_12sdp" />

                    <View style="@style/verticalView2" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/textColorBlack" />


            </LinearLayout>


        </codeztalk.elbasha.delegate.views.MaterialRippleLayout>


    </LinearLayout>
</codeztalk.elbasha.delegate.swipereveallayout.SwipeRevealLayout>