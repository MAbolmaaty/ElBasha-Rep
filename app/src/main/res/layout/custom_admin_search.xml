<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/linearInvoice"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/textDateFrom"
                style="@style/textStyleSmall"
                android:layout_weight="1"
                android:text="@string/from"
                />

            <ImageView
                style="@style/iconStyleSmall"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_drop_down"
                app:tint="@color/colorView" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearInvoice"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/textDateTo"
                style="@style/textStyleSmall"
                android:layout_weight="1"
                android:text="@string/to"
                />

            <ImageView
                style="@style/iconStyleSmall"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_drop_down"
                app:tint="@color/colorView" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageFilter"
            style="@style/iconStyleMain"
            android:layout_gravity="center"

            android:src="@drawable/ic_search" />


    </LinearLayout>

    <LinearLayout
        style="@style/linearInvoice"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:background="@drawable/background_edit_text"
        android:padding="@dimen/_4sdp">

        <TextView
            android:id="@+id/textClientName"
            style="@style/textStyleSmall"
            android:layout_weight="1"
            android:text="@string/clientName"
            />

        <ImageView
            style="@style/iconStyleSmall"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/ic_drop_down"
            app:tint="@color/colorView" />

    </LinearLayout>
</LinearLayout>