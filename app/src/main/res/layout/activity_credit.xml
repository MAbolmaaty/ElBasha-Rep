<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activity" />


    <LinearLayout
        android:id="@+id/linearInvoice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/img_basha"
            app:tint="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/app_name2"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorView" />


        </LinearLayout>

        <LinearLayout
            style="@style/linearInvoice"
            android:layout_marginTop="@dimen/_4sdp">

            <TextView
                style="@style/textStyleRegular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/commerical"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/textStyleRegular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/commerical2"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            style="@style/linearInvoice"
            android:layout_marginTop="@dimen/_4sdp">

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/vat"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/date"
                android:textSize="@dimen/_12sdp" />

            <TextView
                style="@style/textStyleRegular"
                android:text="\t:\t" />

            <TextView
                android:id="@+id/textDate"
                style="@style/textStyleRegular"
                android:text="27-12-2020"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            style="@style/linearInvoice"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start">

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/numberInvoice"
                android:textSize="@dimen/_12sdp" />

            <TextView
                style="@style/textStyleRegular"
                android:text=":\t" />

            <TextView
                android:id="@+id/textInvoiceNumber"
                style="@style/textStyleRegular"
                android:text="4"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/clientName"
                android:textSize="@dimen/_12sdp" />

            <TextView
                style="@style/textStyleRegular"
                android:text="\t:\t" />

            <TextView
                android:id="@+id/textClientName"
                style="@style/textStyleRegular"
                android:text="@string/clientName2"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <TextView
            style="@style/textStyleRegular"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_4sdp"
            android:text="@string/creditInvoice"
            android:textSize="@dimen/_14sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">


            <LinearLayout
                style="@style/linearInvoice"
                android:gravity="start">

                <TextView
                    style="@style/textStyleRegular"
                    android:text="@string/total"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/textStyleRegular"
                    android:layout_weight="1"
                    android:text="\t:\t" />

                <TextView
                    android:id="@+id/textTotal"
                    style="@style/textStyleRegular"
                    android:text="22332"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


            <LinearLayout
                style="@style/linearInvoice"
                android:gravity="start">

                <TextView
                    style="@style/textStyleRegular"
                    android:text="@string/paid2"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/textStyleRegular"
                    android:layout_weight="1"
                    android:text="\t:\t" />

                <TextView
                    android:id="@+id/textPaid"
                    style="@style/textStyleRegular"
                    android:text="232"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                style="@style/linearInvoice"
                android:gravity="end">

                <TextView
                    style="@style/textStyleRegular"
                    android:text="@string/unPaid2"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/textStyleRegular"
                    android:layout_weight="1"
                    android:text="\t:\t" />

                <TextView
                    android:id="@+id/textUnPaid"
                    style="@style/textStyleRegular"
                    android:text="3232 "
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/linearInvoice"

            >

            <TextView
                style="@style/textStyleRegular"
                android:text="@string/delegateName2"
                android:textSize="@dimen/_12sdp" />

            <TextView
                style="@style/textStyleRegular"
                android:text="\t:\t" />

            <TextView
                android:id="@+id/textDelegateName"
                style="@style/textStyleRegular"
                android:text="@string/clientName2"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/connect"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.3"
            android:visibility="gone">

            <Button
                android:id="@+id/connect_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/connect"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/task_button_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/print"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp"
                android:visibility="invisible"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
