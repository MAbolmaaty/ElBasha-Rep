<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearReport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/textInvoicesQty"
            style="@style/textStyleRegular"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/textInvoicesAmount"
            style="@style/textStyleRegular"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" ddd"

            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/textInvoicesCashedAmount"
            style="@style/textStyleRegular"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="sssssss"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/textInvoicesCreditAmount"
            style="@style/textStyleRegular"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10"

            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/textCreditAmount"
            style="@style/textStyleRegular"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"

            android:text="20"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/textTotalCollectedAmount"
            style="@style/textStyleRegular"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="200"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textDate"
        style="@style/textStyleRegular"
        android:layout_margin="@dimen/_4sdp"
        android:text="ssssssssssss"
        android:textColor="@color/colorAccent"
        android:layout_gravity="end"
         android:textSize="@dimen/_9sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".6dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/colorView" />


</LinearLayout>
